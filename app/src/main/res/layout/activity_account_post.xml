<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AccountPostActivity"
    android:id="@+id/accountPostActivity">




    <EditText
        android:hint="New Account Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/kimLogo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp"/>

    <EditText
        android:hint="New Account Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_above="@+id/loginbutton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="113dp"/>

    <Button
        style="@style/btnStyleGenoa"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/addAccount"
        android:id="@+id/loginbutton"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kimLogo"
        android:layout_above="@+id/editText2"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
